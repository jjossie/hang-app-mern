    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}