{
  "swagger": "2.0",
  "info": {
    "title": "HangApp API",
    "description": "HangApp allows a group of homies to make decisions in a group using tinder-style swipe voting. This API is for interacting with the data of hangouts and homies.",
    "version": "1.0.0"
  },
  "host": "localhost:3341",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/api-docs": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {}
      }
    },
    "/hello": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/homie": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "homie",
            "in": "body",
            "description": "Creating a new homie. This (for now) will not add them to a hangout",
            "schema": {
              "$ref": "#/definitions/homie"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/homie/{homieId}": {
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "homieId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Get a homie by ID",
            "schema": {
              "$ref": "#/definitions/homie"
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "definitions": {
    "homie": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Joe Momma"
        },
        "email": {
          "type": "string",
          "example": "joemomma@gmail.com"
        },
        "isReady": {
          "type": "boolean",
          "example": false
        }
      },
      "required": [
        "name"
      ]
    }
  }
}